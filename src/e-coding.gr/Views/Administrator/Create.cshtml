@model e_coding.gr.Data.Question

@{
    ViewBag.Title = "New Question";
}



@{
    ViewData["Title"] = "Administrator - Index";
}

<div id="mainpage">

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a asp-area="" asp-controller="Html" asp-action="Html1">
                        <strong> Menu</strong>
                    </a>
                </li>

                <li>
                    <a asp-area="" asp-controller="administrator" asp-action="Index">Questions</a>
                </li>
                <li style="background-color:#ba02e6;">
                    <a asp-area="" asp-controller="administrator" asp-action="Create">NewQuestion</a>
                </li>

            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                        <h1>@ViewData["Title"]</h1>


                        <form asp-controller="Questions" asp-action="Create" method="post" class="form-horizontal" role="form">

                            <div class="form-horizontal">
                                <div asp-validation-summary="All" class="text-danger">

                                </div>
                                <div class="form-group">
                                    <label asp-for="QuestionStr" class="col-md-2 control-label">

                                    </label>

                                    <div class="col-md-10">
                                        <input asp-for="QuestionStr" class="form-control" />
                                        <span asp-validation-for="QuestionStr" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label asp-for="Level" class="col-md-2 control-label">

                                    </label>

                                    <div class="col-md-10">
                                        <input asp-for="Level" class="form-control" />
                                        <span asp-validation-for="Level" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label asp-for="SourceUrl" class="col-md-2 control-label">

                                    </label>

                                    <div class="col-md-10">
                                        <input asp-for="SourceUrl" class="form-control" />
                                        <span asp-validation-for="SourceUrl" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label asp-for="Section" class="col-md-2 control-label">

                                    </label>

                                    <div class="col-md-10">
                                        <input asp-for="Section" class="form-control" />
                                        <span asp-validation-for="Section" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>


                        </form>
                
                        <!-- /#page-content-wrapper -->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
                $("#menu-toggle").click(function (e) {
                    e.preventDefault();
                    $("#wrapper").toggleClass("toggled");
                });
    </script>
</div>























