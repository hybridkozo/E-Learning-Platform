@model e_coding.gr.Data.Answer

@{
    ViewData["Title"] = "EditAnswer";
}

<h2>EditAnswer</h2>

<form asp-action="EditAnswer">
    <div class="form-horizontal">
        <h4>Answer</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AnswerID" />
        <div class="form-group">
            <label asp-for="AnswerStr" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AnswerStr" class="form-control" />
                <span asp-validation-for="AnswerStr" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="CorrectAnswer" />
                    <label asp-for="CorrectAnswer"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="QuestionID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="QuestionID" class="form-control" asp-items="ViewBag.QuestionID"></select>
                <span asp-validation-for="QuestionID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

