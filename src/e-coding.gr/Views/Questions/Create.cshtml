@model e_coding.gr.Data.Question

@{
    ViewBag.Title = "New Question";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Questions" asp-action="Create" method="post" class="form-horizontal" role="form">

    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger">

        </div>
        <div class="form-group">
            <label asp-for="QuestionStr" class="col-md-2 control-label">

            </label>

            <div class="col-md-10">
                <input asp-for="QuestionStr" class="form-control" />
                <span asp-validation-for="QuestionStr" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group">
            <label asp-for="Level" class="col-md-2 control-label">

            </label>

            <div class="col-md-10">
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group">
            <label asp-for="SourceUrl" class="col-md-2 control-label">

            </label>

            <div class="col-md-10">
                <input asp-for="SourceUrl" class="form-control" />
                <span asp-validation-for="SourceUrl" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group">
            <label asp-for="Section" class="col-md-2 control-label">

            </label>

            <div class="col-md-10">
                <input asp-for="Section" class="form-control" />
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>

        </div>

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>


</form>
